5xx.engineer  {
	encode zstd gzip
	log {
		output file /var/log/caddy/access.log {
			roll_size 1gb
			roll_keep 2
			roll_keep_for 24h
		}
	}
	respond "Hello, {remote_host}:{remote_port}"
}

atuin.5xx.engineer {
	encode zstd gzip
	reverse_proxy atuin:8888
}

rss.5xx.engineer {
	encode zstd gzip
	reverse_proxy freshrss:80
	log {
		output file /var/log/caddy/access-rss.log {
			roll_size 1gb
			roll_keep 2
			roll_keep_for 24h
		}
	}
}

home.5xx.engineer {
	encode zstd gzip
	reverse_proxy homepage:3000
}

